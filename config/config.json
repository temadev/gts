{

  "express": {
    "view cache": false,
    "view engine": "jade",
    "views": "path:./.build/templates"
  },

  "bcrypt": {
    "difficulty": 8
  },

  "middleware": {

    "static": {
      "module": {
        "arguments": [ "path:./.build" ]
      }
    },

    "router": {
      "module": {
        "arguments": [
          {
            "directory": "path:./controllers"
          }
        ]
      }
    },

    "fileNotFound": {
      "enabled": true,
      "priority": 130,
      "module": {
        "name": "kraken-js/middleware/404",
        "arguments": [ "errors/404" ]
      }
    },

    "serverError": {
      "enabled": true,
      "priority": 140,
      "module": {
        "name": "kraken-js/middleware/500",
        "arguments": [ "errors/500" ]
      }
    },

    //flash messaging middleware
    "flash": {
      "priority": 91,
      "enabled": true,
      "module": {
        "name":"connect-flash",
        "method": "flash"
      }
    },

    //test if user session required to view page and if user has permission for given page
    "isAuthenticated": {
      "enabled": true,
      "priority": 111,
      "module": {
        "name":"path:./lib/auth",
        "method": "isAuthenticated"

      }
    },

    //add the user to the response object
    "injectUser": {
      "enabled": true,
      "priority": 112,
      "module": {
        "name":"path:./lib/auth",
        "method": "injectUser"
      }
    },

    "machineryCount": {
      "enabled": true,
      "priority": 113,
      "module": {
        "name":"path:./lib/machineryCount",
        "method": "machineryCount"
      }
    },

    "hostname": {
      "enabled": true,
      "priority": 115,
      "module": {
        "name":"path:./lib/hostname",
        "method": "hostname"
      }
    },

    "siteSettings": {
      "enabled": true,
      "priority": 116,
      "module": {
        "name":"path:./lib/settings",
        "method": "settings"
      }
    },

    "nav": {
      "enabled": true,
      "priority": 114,
      "module": {
        "name":"path:./lib/nav",
        "method": "categories"
      }
    },

    "session": {
      "enabled": true,
      "priority": 100,
      "module": {
        "name": "path:./lib/redis-session",
        "arguments": [
          {
            "key": "sid",
            "secret": "20648005b69c4b15bdebe919f336dfbfc29453db",
            "cookie": {
              "path": "/",
              "httpOnly": true,
              "secure": false,
              "maxAge": 86400000
            }
          },
          {
            "url": "redis://rediscloud:5CFESSXBIoc0Lmhq@pub-redis-15216.eu-west-1-2.1.ec2.garantiadata.com:15216"
          }
        ]
      }
    }

  }
}
