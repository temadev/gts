{

  "express": {
    "view cache": false,
    "view engine": "jade",
    "views": "path:./.build/templates"
  },

  "databaseConfig": {
    "host": "mongodb://heroku_app29506363:inu9hg8m6asa1341fl8u47claa@ds063789.mongolab.com:63789",
    "database": "heroku_app29506363"
  },

  "bcrypt": {
    "difficulty": 8
  },

  "middleware": {

    "static": {
      "module": {
        "arguments": [ "path:./.build" ]
      }
    },

    "router": {
      "module": {
        "arguments": [
          {
            "directory": "path:./controllers"
          }
        ]
      }
    },

    "fileNotFound": {
      "enabled": true,
      "priority": 130,
      "module": {
        "name": "kraken-js/middleware/404",
        "arguments": [ "errors/404" ]
      }
    },

    "serverError": {
      "enabled": true,
      "priority": 140,
      "module": {
        "name": "kraken-js/middleware/500",
        "arguments": [ "errors/500" ]
      }
    },

    //flash messaging middleware
    "flash": {
      "priority": 91,
      "enabled": true,
      "module": {
        "name":"connect-flash",
        "method": "flash"
      }
    },

    //test if user session required to view page and if user has permission for given page
    "isAuthenticated": {
      "enabled": true,
      "priority": 111,
      "module": {
        "name":"path:./lib/auth",
        "method": "isAuthenticated"

      }
    },

    //add the user to the response object
    "injectUser": {
      "enabled": true,
      "priority": 112,
      "module": {
        "name":"path:./lib/auth",
        "method": "injectUser"
      }
    },

    "machineryCount": {
      "enabled": true,
      "priority": 113,
      "module": {
        "name":"path:./lib/machineryCount",
        "method": "machineryCount"
      }
    },

    "nav": {
      "enabled": true,
      "priority": 114,
      "module": {
        "name":"path:./lib/nav",
        "method": "categories"
      }
    }

  }
}
