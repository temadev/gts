.meadiHolder
    #carousel.carousel.slide.c-fade(data-ride='carousel')
        .carousel-inner
            if (nav.menu['Главная']['active'])
                .active.item
                    picture
                        source(srcset='img/slide1_small.jpg', media='(max-width: 768px)')
                        source(srcset='img/slide1.jpg')
                        img(src='img/slide1.jpg', alt='ГТС ГлобалТехноСтрой')
                .item
                    picture
                        source(srcset='img/slide2_small.jpg', media='(max-width: 768px)')
                        source(srcset='img/slide2.jpg')
                        img(src='img/slide2.jpg', alt='Строительство спорткомплекса')
                    .carousel-caption.hidden-xs
                        h3
                            span Сочи 2014
                        .price Строительство спорткомплекса
                .item
                    picture
                        source(srcset='img/slide3_small.jpg', media='(max-width: 768px)')
                        source(srcset='img/slide3.jpg')
                        img(src='img/slide3.jpg', alt='Погрузчик JCB3CX')
                    .carousel-caption.hidden-xs
                        h3
                            small: span Специальная цена
                            span Погрузчик JCB3CX
                        .price
                            | 1200
                            span руб/час
            else
                .active.item
                    picture
                        source(srcset='img/sub1_small.jpg', media='(max-width: 768px)')
                        source(srcset='img/sub1.jpg')
                        img(src='img/sub1.jpg', alt='ГТС ГлобалТехноСтрой')
