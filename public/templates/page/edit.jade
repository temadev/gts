extends ../layouts/page
block content
    // START #content
    .container
        form.form-horizontal#contractorForm(role='form', method='post', action='/page/edit')
            // START panel
            .panel.panel-default
                .panel-heading Редактировать страницу
                .panel-body
                    fieldset
                        .form-group
                            label.col-sm-2.control-label Название
                            .col-sm-6
                                input.form-control#title(type='text', name='title', required='required', value='#{page.title?page.title:""}')
                        .form-group
                            label.col-sm-2.control-label URL
                            .col-sm-6
                                input.form-control#url(type='text', name='url', value='#{page.url?page.url:""}')
                        .form-group
                            label.col-sm-2.control-label Контент
                            .col-sm-9
                                textarea.form-control#pageContent(name='content', rows='6') #{page.content?page.content:""}
                    hr
                    fieldset
                        .form-group
                            label.col-sm-2.control-label Title
                            .col-sm-9
                                input.form-control#seoTitle(type='text', name='seo.title', value='#{page.seo.title?page.seo.title:""}')
                        .form-group
                            label.col-sm-2.control-label Keywords
                            .col-sm-9
                                input.form-control#seoKeywords(type='text', name='seo.keywords', value='#{page.seo.keywords?page.seo.keywords:""}')
                        .form-group
                            label.col-sm-2.control-label Description
                            .col-sm-9
                                input.form-control#seoDescription(type='text', name='seo.description', value='#{page.seo.description?page.seo.description:""}')
                        .form-group
                            label.col-sm-2.control-label Canonical
                            .col-sm-4
                                input.form-control#seoCanonical(type='text', name='seo.canonical', value='#{page.seo.canonical?page.seo.canonical:""}')
                        .form-group
                            label.col-sm-2.control-label SEO
                            .col-sm-9
                                textarea.form-control#seoContent(name='seo.content', rows='6') #{page.seo.content?page.seo.content:""}
                .panel-footer
                    button.btn.btn-primary(type='submit') Сохранить
                    input(type="hidden", name="id", value="#{page.id}")
                    input(type="hidden", name="_csrf", value="#{_csrf}")
            // END panel